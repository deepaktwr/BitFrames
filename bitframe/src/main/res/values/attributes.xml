<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="bool_true" type="bool">true</item>
    <item name="bool_false" type="bool">false</item>

    <item name="trans_percent" type="integer">70</item>
    <item name="diff_threshold" type="integer">0</item>
    <item name="max_frame" type="integer">4</item>
    <item name="min_add_rato" type="fraction">25%</item>

    <item name="comment_transparency_percent" format="reference" type="integer">@integer/trans_percent</item>
    <item name="sort_difference_threshold" format="reference" type="integer">@integer/diff_threshold</item>
    <item name="max_frame_count" format="reference" type="integer">@integer/max_frame</item>
    <item name="min_add_ratio" format="reference" type="fraction">@fraction/min_add_rato</item>
    <item name="error_drawable" format="reference" type="drawable">@drawable/ic_launcher</item>
    <item name="min_frame_width" format="reference" type="dimen">@dimen/d_64</item>
    <item name="min_frame_height" format="reference" type="dimen">@dimen/d_64</item>
    <item name="max_container_width" format="reference" type="dimen">@dimen/d_192</item>
    <item name="max_container_height" format="reference" type="dimen">@dimen/d_192</item>
    <item name="is_add_in_layout" format="reference" type="bool">@bool/bool_false</item>
    <item name="should_show_comment" format="reference" type="bool">@bool/bool_true</item>
    <item name="has_scroll" format="reference" type="bool">@bool/bool_false</item>
    <item name="has_fixed_dimensions" format="reference" type="bool">@bool/bool_false</item>
    <item name="should_store_images" format="reference" type="bool">@bool/bool_false</item>
    <item name="should_recycle_bitmaps" format="reference" type="bool">@bool/bool_true</item>
    <item name="should_sort_images" format="reference" type="bool">@bool/bool_true</item>

    <declare-styleable name="ViewFrame">
        <attr name="commentTransparencyPercent" format="integer|reference"/>
        <attr name="sortDifferenceThreshold" format="integer|reference"/>
        <attr name="minFrameWidth" format="dimension|reference"/>
        <attr name="minFrameHeight" format="dimension|reference"/>
        <attr name="maxContainerWidth" format="dimension|reference"/>
        <attr name="maxContainerHeight" format="dimension|reference"/>
        <attr name="maxFrameCount" format="integer|reference"/>
        <attr name="minAddRatio" format="float|reference"/>
        <attr name="isAddInLayout" format="boolean|reference"/>
        <attr name="shouldShowComment" format="boolean|reference"/>
        <attr name="hasScroll" format="boolean|reference"/>
        <attr name="hasFixedDimensions" format="boolean|reference"/>
        <attr name="shouldStoreImages" format="boolean|reference"/>
        <attr name="shouldRecycleBitmaps" format="boolean|reference"/>
        <attr name="shouldSortImages" format="boolean|reference"/>
        <attr name="colorCombination" format="enum">
            <enum name="VIBRANT_TO_MUTED" value="0"/>
            <enum name="MUTED_TO_VIBRANT" value="1"/>
        </attr>
        <attr name="errorDrawable" format="integer"/>
        <attr name="imageScaleType" format="enum">
            <enum name="centerInside" value="7"/>
            <enum name="centerCrop" value="6"/>
            <enum name="center" value="5"/>
            <enum name="fitEnd" value="4"/>
            <enum name="fitCenter" value="3"/>
            <enum name="fitStart" value="2"/>
            <enum name="fitXY" value="1"/>
            <enum name="matrix" value="0"/>
        </attr>
    </declare-styleable>

</resources>